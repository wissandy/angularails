<div class="row" ng-app="AngulaRails" ng-controller="tacoorder">
	<div class="col-md-6">
		<h3>add taco to order</h3>
		<form ng-submit="addtaco()">
			<div class="form-group">
				<label for="name">name your creation</label>
				<input type="text" class="form-control" placeholders="super tasy" ng-model="taco.name"></input>
			</div>
			<div class="form-group">
				<label for="filling">select your filling</label>
				<select ng-model="taco.filling" class="form-control">
					<option>beef</option>
					<option>chicken</option>
					<option>fish</option>
				</select>
			</div>
			<button class="btn btn-primary">submit</button>
		</form>
	</div>
	<div class="col-md-6">
		<h3>your order</h3>
		<table class="table">
			<tbody>
				<tr ng-repeat="taco in tacos">
					<td>{{ taco.name }}</td>
					<td>{{ taco.filling }}</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>